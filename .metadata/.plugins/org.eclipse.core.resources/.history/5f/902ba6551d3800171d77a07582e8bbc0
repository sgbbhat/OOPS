#include <iostream>
using namespace std;

// Swap by pointer
void swapByPtr(int *a, int *b)
{
	int temp;
	temp = *a;
	*a = *b;
	*b = *a;
}

// Swap by reference
void swapByRef(int &a, int &b)
{
	int temp;
	temp = a;
	a = b;
	b = a;
}

int main() {
	int a, b, c, d;
	a = 5;
	b = 10;
	c = 15;
	d = 20;

	cout<<"Before swap : "<<endl;
	cout<<"a : "<<a<<endl;
	cout<<"b : "<<a<<endl;
	cout<<"c : "<<a<<endl;
	cout<<"d : "<<a<<endl;

	cout<<"After swap : "<<endl;
	cout<<"a : "<<a<<endl;
	cout<<"b : "<<a<<endl;
	cout<<"c : "<<a<<endl;
	cout<<"d : "<<a<<endl;

	swapByRef(a, b);
	swapByPtr(c, d);
	return 0;
}
