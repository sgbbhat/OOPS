#include <iostream>
using namespace std;

int main() {
	char in;
	int in2;
	cout<<"Enter input : "<<endl;
	cin>>in;

	switch(in){
	case 'A':
		cout<<"Entered A"<<endl;
		break;
	case 'B':
		cout<<"Entered B"<<endl;
		break;
	case 'C':
		cout<<"Entered C"<<endl;
		break;

	default:
		cout<<"UNKNOWN"<<endl;
		break;
	}

	for(int i=0; i<10; i++)
	{
		cout<<"Enter number"<<endl;
		cin>>in2;

		if(in2 % 2 == 0)
		{
			break;
		}
	}

	for(int i=0; i<10; i++)
	{
		cout<<"Enter number"<<endl;
		cin>>in2;

		if(in2 % 2 == 0)
		{
			break;
		}
	}

	return 0;
}
