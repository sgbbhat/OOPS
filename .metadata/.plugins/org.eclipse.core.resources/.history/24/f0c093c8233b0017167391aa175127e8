#include <iostream>
using namespace std;

struct MyStructType
{
	char c;
	int x, y;
};

int main() {
	MyStructType p1;
	MyStructType * ptr1;
	ptr1 = &p1;
	ptr1->c = 'a';
	ptr1->x = 10;
	ptr1->y = 20;

	cout<<"char type c stored in the location : "<< ptr1->c <<endl;
	cout<<"Integer type x stored in the location : "<< ptr1->x <<endl;
	cout<<"Integer type y stored in the location : "<< ptr1->y <<endl;

	cout<<"char type c stored in the location : "<< ptr1->c <<endl;
	cout<<"Integer type x stored in the location : "<< ptr1->x <<endl;
	cout<<"Integer type y stored in the location : "<< ptr1->y <<endl;

	return 0;
}
