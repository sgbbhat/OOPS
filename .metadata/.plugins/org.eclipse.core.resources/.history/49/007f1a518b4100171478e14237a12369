#include <iostream>
using namespace std;

class Line
{
private:
	int * ptr;

public:

	Line(int len){
		ptr = new int;
		*ptr = len;
	}

	Line(const Line &obj){
		ptr = new int;
		*ptr = *obj.ptr;
	}

	int getLength( void ) {
	   return *ptr;
	}

	~Line(void) {
	   delete ptr;
	};

int main() {

	return 0;
}
