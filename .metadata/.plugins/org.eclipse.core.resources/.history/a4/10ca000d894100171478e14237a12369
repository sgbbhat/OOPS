#include <iostream>
using namespace std;

void print(int * a)
{
	for(int i=0; i <12; i++)
	{
		cout<<a[i] <<endl;
	}
}

int main() {
	int * a;
	a =(int *) calloc(10, sizeof(int));

	for(int i=0; i <12; i++){
		a[i] = 100 + i;
	}
	print(a);

	int * b = (int *) realloc(a, 12* sizeof(int));

	for(int i=0; i <12; i++){
		b[i] = 100 + i;
	}

	free(a);
	print(b);


	return 0;
}
