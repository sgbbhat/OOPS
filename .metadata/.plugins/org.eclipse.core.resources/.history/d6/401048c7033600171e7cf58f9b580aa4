#include <iostream>
using namespace std;

class shape
{
protected:
	int height;
	int width;

public:
	void set_height(int h)
	{
		height = h;
		cout<<"Set height"<<endl;
	}

	void set_width(int w)
	{
		width = w;
	}
};

class rectangle:public shape
{
public:
	float get_area()
	{
		return width*width;
	}
};

int main() {
	shape rect = new rectangle();
	return 0;
}
