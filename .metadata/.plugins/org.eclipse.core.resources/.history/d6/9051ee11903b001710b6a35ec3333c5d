#include <iostream>
using namespace std;

class Person
{
private:
	string * name;
	int age;

public:
	Person(string name, int age){
		*(this->name) = name;
		this->age = age;
	}

	void changeNameAndAge(string name, int age){
		*(this->name) = name;
		this->age = age;
	}

	void introduce(){
		cout<<"Hi, I'm "<<name<< " and my age : "<<age<<endl;
	}
};

int main() {
	Person Anil("Anil", 24);
	Anil.introduce();

	Person DuplicateAnil = Anil;
	DuplicateAnil.introduce();

	Anil.changeNameAndAge("Kumble", 45);
	Anil.introduce();
	DuplicateAnil.introduce();

	return 0;
}
