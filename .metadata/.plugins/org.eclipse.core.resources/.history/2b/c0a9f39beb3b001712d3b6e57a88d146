#include <iostream>
using namespace std;

class Line{
private:
	int * ptr;

public:
	int getLength(void);
	Line(int len);
	Line(const Line &obj);
	~Line();
};

Line::Line(int len){
	cout<<"Normal Constructor"<<endl;
	ptr = new int;
	*ptr = len;
}

Line::Line(const Line &obj){
	cout<<"Copy constructor"<<endl;

	ptr = new int;
	*ptr = *obj.ptr;
}

int Line::getLength( void ) {
   return *ptr;
}

void display(Line obj){
	cout << "Length of line : " << obj.getLength() <<endl;
}


int main() {

	return 0;
}
